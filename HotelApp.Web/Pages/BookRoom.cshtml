@page
@model HotelApp.Web.Pages.BookRoomModel
@{
    ViewData["Title"] = "Book A Room";
}

<h1>Book A Room</h1>

<h2>@Model.RoomType.Title</h2>

<p>@Model.RoomType.Description</p>
<p>You are staying @Model.DaysStaying() from @Model.StartDate.ToString("d") to @Model.EndDate.ToString("d")</p>
<p>The price per night is @($"{Model.RoomType.Price:C}")</p>
<p>The total cost is @Helpers.CalculateTotalCost(Model.RoomType.Price, Model.StartDate, Model.EndDate)</p>

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" type="text">
        <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.LastName">Last Name</label>
        <input asp-for="@Model.LastName" type="text">
        <span class="text-danger" asp-validation-for="@Model.LastName"></span>
    </div>
    
    <input name="ROOMTYPEID" type="hidden" value="@Model.RoomType.Id"
           data-val="true" data-val-required="The room type id is required"/>
    
    <button class="btn btn-primary" type="submit">Book</button>
</form>

<br />

<a asp-page="RoomSearch">Search again</a>
